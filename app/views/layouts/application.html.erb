<!DOCTYPE html>
<html>
  <head>
    <title>SampleApp</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': true %>

    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
    
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= csrf_meta_tags %>

  </head>

  <body>
  	<nav class="navbar-collapse collapse">
  		<ul class="nav navbar-nav navbar-right">
  			<li><%= link_to "Home", static_pages_landing_page_path %></li>
  			<li><%= link_to "About", static_pages_about_path %></li>
  			<li><%= link_to "Contact", static_pages_contact_path %></li>
        <li class="nav-search">
          <%= form_tag("/products", method: "get") do %>
          <%= label_tag(:q, "Search for:") %>
          <%= text_field_tag(:q) %>
          <%= submit_tag("Search") %>
          <% end %>
        </li>  
      </ul>
      <ul class="nav pull-right">
        <li>
          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
          <% else %>
            <%= link_to('Login', new_user_session_path) %>
          <% end %>
        </li>
      </ul>
  	</nav>

    <% if notice %>
      <p id="notice" class="alert lalert-info"><%= notice %></p>
    <% end %>

    <% if alert %>
      <p id="alert" role="alert"><%= alert %></p>
    <% end %>
    

    <%= yield %>
    


    <footer>
    	&copy; 2016 Ayana Jewelry

      <div class="twitter"> <a href="https://twitter.com/Twitter" class="twitter-follow-button" data-lang="en" data-show-count="false">Follow @Twitter</a><script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script></div>

    
      <div class="fb-like" data-href="https://www.facebook.com/mira.max.184" data-layout="standard" data-action="like" data-size="small" data-show-faces="false" data-share="false"></div>


      <div class="fb-share-button" data-href="https://www.facebook.com/mira.max.184" data-layout="button_count" data-size="small" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.facebook.com%2Fmira.max.184&amp;src=sdkpreparse">Share</a></div>

    </footer>
  </body>
</html>
